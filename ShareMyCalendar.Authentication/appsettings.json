{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "IamSettings": {
        "MigrationsAssembly": "ShareMyCalendar.API", 
        "Jwt": {
            "Issuer": "ShareMyCalendar",
            "Audience": "ShareMyCalendar",
            "LifespanInDays": 1
        }
    },
    "IamEmailSettings": {
        "ConfirmEmailAddressEmailSettings": {
            "ConfirmEmailBaseUri": "http://localhost:3000/",
            "From": {
                "Name": "admin",
                "Email": "admin@sharemycalendar.ca"
            }
        },
        "ResetPasswordEmailSettings": {
            "ChangePasswordBaseUri": "http://localhost:3000/",
            "From": {
                "Name": "admin",
                "Email": "admin@sharemycalendar.ca"
            }
        } 
    } 
}
